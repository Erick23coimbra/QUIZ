<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ftFoto"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:rotation="270"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/txtRgmRecebido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNomeRecebido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#F3FCFAFA"
                android:text="[NOME DO ALUNO]"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/txtRGMRecebido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FDF8F3F3"
                android:text="[RGM DO ALUNO]"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnArquivo"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="#2196F3"
        android:text="Foto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="200dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtNome"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="0"
            android:digits="abcdefghijklmnopqrstuvxwyz
            ABCDEFGHIJKLMNOPQRSTUVXWYZ"
            android:ems="10"
            android:hint="Digite seu nome:"
            android:inputType="textPersonName"
            android:maxLength="25"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#3F51B5"
            android:enabled="false"
            android:fadeScrollbars="false"
            android:text="Iniciar Quiz"
            android:textColor="#EBE4E4" />

        <Button
            android:id="@+id/btnSair"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#3F51B5"
            android:text="Sair"
            android:textColor="#F8F2F2" />
    </LinearLayout>

</LinearLayout>
